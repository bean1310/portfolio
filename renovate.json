{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "packageRules": [
        {
            "updateTypes": [
                "minor",
                "patch"
            ],
            "automerge": false
        }
    ],
    "schedule": [
        "before 5am on saturday"
    ],
    "groupName": "all",
    "groupSlug": "all-updates",
    "labels": [
        "dependencies",
        "automerge"
    ]
}